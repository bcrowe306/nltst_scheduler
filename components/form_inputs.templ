package components

templ TextInput(name string, value string, placeholder string) {
    <div class="mx-auto w-full mb-5">

        <input id={name} name={name} type="text" placeholder={placeholder} value={value}
            class="ring-offset-background flex h-10 w-full rounded-md border border-neutral-300 bg-gray-50 px-3 py-2 text-sm placeholder:text-neutral-500 focus:border-neutral-300 focus:ring-2 focus:ring-neutral-400 focus:ring-offset-1 focus:outline-none disabled:cursor-not-allowed disabled:opacity-50" />
    </div>
}


templ EmailInput(name string, value string, placeholder string) {
<div class="mx-auto w-full mb-5">
    <input id={name} name={name} type="email" placeholder={placeholder} value={value}
        class="ring-offset-background flex h-10 w-full rounded-md border border-neutral-300 bg-gray-50 px-3 py-2 text-sm placeholder:text-neutral-500 focus:border-neutral-300 focus:ring-2 focus:ring-neutral-400 focus:ring-offset-1 focus:outline-none disabled:cursor-not-allowed disabled:opacity-50" />
</div>
}

templ PasswordInput(name string, value string, placeholder string) {
<div class="mx-auto w-full mb-5">
    <input id={name} name={name} type="password" placeholder={placeholder} value={value}
        class="ring-offset-background flex h-10 w-full rounded-md border border-neutral-300 bg-gray-50 px-3 py-2 text-sm placeholder:text-neutral-500 focus:border-neutral-300 focus:ring-2 focus:ring-neutral-400 focus:ring-offset-1 focus:outline-none disabled:cursor-not-allowed disabled:opacity-50" />
</div>
